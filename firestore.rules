rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    function isAdvocate() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'advocate');
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated(); // Allow authenticated users to read user profiles (refine as needed)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Advocates Collection
    match /advocates/{advocateId} {
      allow read: if true; // Publicly readable for searching advocates
      allow create: if isAdvocate() || isAdmin();
      allow update: if (isAdvocate() && resource.data.userId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // Cases Collection
    match /cases/{caseId} {
      // Clients can read their own cases. Advocates can read assigned cases. Admins can read all.
      allow read: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid || 
        resource.data.advocateId == request.auth.uid || 
        isAdmin()
      );
      
      // Clients can create cases. 
      allow create: if isAuthenticated() && request.resource.data.clientId == request.auth.uid;
      
      // Updates allowed by participants or admin
      allow update: if isAuthenticated() && (
        resource.data.clientId == request.auth.uid || 
        resource.data.advocateId == request.auth.uid || 
        isAdmin()
      );
      
      allow delete: if isAdmin();
    }

    // Notifications Collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Usually generated by backend, but allow admin write for manual notifications
      allow write: if isAdmin(); 
    }

    // Complaints Collection
    match /complaints/{complaintId} {
      allow read: if isAuthenticated() && (resource.data.raisedBy == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.raisedBy == request.auth.uid;
      allow update: if isAdmin(); 
    }

    // Reviews Collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.clientId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // AI Logs, Activity Logs, Admin Logs - Restricted to Admin
    match /aiLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /activityLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }

    // System Settings
    match /systemSettings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Documents
    match /documents/{documentId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        // Check if user is the assigned advocate for the related case (requires extra lookup, potentially expensive)
        // Ideally, denote access in document metadata or use a subcollection of cases.
        // For now, simplify:
        isAdmin()
      );
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
