{
    "version": 2,
    "installCommand": "npm install && cd server && npm install && cd ../client && npm install",
    "buildCommand": "cd client && npm run build",
    "outputDirectory": "client/dist",
    "functions": {
        "api/index.mjs": {
            "maxDuration": 30,
            "memory": 1024,
            "includeFiles": "server/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.mjs"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache"
                }
            ]
        }
    ]
}